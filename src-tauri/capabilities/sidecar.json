{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "sidecar-capability",
  "description": "Capability for running the pocket-tts sidecar",
  "windows": ["main"],
  "permissions": [
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "args": [
            { "validator": "--host" },
            { "validator": "\\d+\\.\\d+\\.\\d+\\.\\d+" },
            { "validator": "--port" },
            { "validator": "\\d+" },
            { "validator": "--preload" }
          ],
          "name": "binaries/pocket-tts",
          "sidecar": true
        }
      ]
    }
  ]
}
